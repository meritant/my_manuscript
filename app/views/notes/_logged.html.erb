
<%# <h1>My Notes</h1> %>
<div class='position-relative'>

<div class="center2">
<!--New Note Button-->
<div class="d-grid justify-content-md-end">
<%= link_to "New note", new_note_path, class:"btn btn-success "%>
</div>
<!--New Note Button End-->
<table class="table table-striped table-hover caption-top align-middle">

<caption>My notes</caption>

<thead>
<tr>
<th style="width: 20%">Title</td>
<th style="width: 30%">Text</td>
<th>Created</td>
<th colspan="3">Actions</td>
</tr>
</thead>


<tbody>
  <% @notes.each do |note| %>
  <% if note.admin == current_admin %>
    <tr>
<td><strong><%= link_to note.title, note, class:"link-success"%></strong></td>
<td><%= truncate(note.text, length: 25)  %>
<%# note.text%>
</td>

<td><%= note.created_at%></td>

<td>
<%= link_to "show", note,  class:"btn btn-primary btn-sm"%>
 </td>
<td>
  <%= link_to "edit", edit_note_path(note.id), class:"btn btn-warning btn-sm"  %> 
</td>
<td>

<%= button_to "", note, method: :delete, class:"btn-close"%>
</td>
</tr>
<% end %>
  <% end %>
</tbody>
</table>

<!--New Note Button-->
<div class="d-grid justify-content-md-end">
<%= link_to "New note", new_note_path, class:"btn btn-success "%>
</div>
<!--New Note Button End-->
</div>


</div>
