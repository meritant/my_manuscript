<%= form_with(model: note) do |form| %>
  <% if note.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%# Alert about characters %>
<div class="alert alert-light" role="alert">
Maximum 240 Characters
</div>

<div class="input-group mb-3">
  <span class="input-group-text" id="basic-addon1">Title</span>

    <%= form.text_field :title, class:"form-control", maxlength: 28, placeholder:"My new note..." %>
</div>

<div class="input-group">
  <span class="input-group-text">Text</span>

    <%= form.text_area :text, class:"form-control", maxlength: 240, placeholder:"I have to do...", rows:"8"%>
</div>
<div class="input-group mb-3">

    <%= form.number_field :admin_id, id: :notes_user_id, class:"form-control", value:current_admin.id, type: :hidden %>
</div>
<br>
<!--New Note Button-->
<div class="d-grid justify-content-md-end">

<%= submit_tag ("Submit"), class:"btn btn-success"%>
</div>
<!--New Note Button End-->
<% end %>
